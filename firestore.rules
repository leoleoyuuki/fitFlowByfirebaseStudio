rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Professionals (users) can only read and modify their own user profile.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      // A professional can only create their own user document upon signup.
      allow create: if request.auth.uid == userId;
    }

    // A professional can only read/write the client plans they have generated.
    // The plans are stored in a subcollection under their own unique professional ID.
    match /userGeneratedPlans/{professionalId}/plans/{planId} {
      allow read, write: if request.auth.uid == professionalId;
    }
    
    // A professional can only manage progress logs associated with their account.
    // The 'userId' field in the document must match the logged-in professional's UID.
    match /userProgressLogs/{logId} {
      // A professional can create a log if the log's userId is their own UID.
      allow create: if request.auth.uid == request.resource.data.userId;

      // A professional can read, update, or delete a log if they are the owner.
      allow read, update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}
